Post
	name Text
	text Text
	hour TimeOfDay default=CURRENT_TIME
	day Day default=CURRENT_TIME
	deriving Show

Comment
	post PostId
	name Text
	text Text
	hour TimeOfDay default=CURRENT_TIME
	day Day default=CURRENT_TIME
	deriving Show